public class Sphere {
    private double radius;

    public Sphere() {
        radius = 0;
    }

    public void setRadius(double radius) {
        this.radius = radius;
    }

    public double getVolume() {
        return 4 * Math.PI * Math.pow(radius, 3) / 3;
    }

    public double getSurfaceArea() {
        return 4 * Math.PI * Math.pow(radius, 2);
    }
}
